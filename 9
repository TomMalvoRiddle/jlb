import java.util.*;

public class MergeArrays {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int[] arr1 = new int[15];
        int[] arr2 = new int[15];

        System.out.println("Enter 15 numbers for array 1:");
        for (int i = 0; i < 15; i++) {
            arr1[i] = scanner.nextInt();
        }

        System.out.println("Enter 15 numbers for array 2:");
        for (int i = 0; i < 15; i++) {
            arr2[i] = scanner.nextInt();
        }

        int[] mergedArray = mergeArrays(arr1, arr2);
        int[] distinctElements = getDistinctElements(mergedArray);

        System.out.println("Distinct Elements \t Count");
        for (int i = 0; i < distinctElements.length; i++) {
            int count = getCount(mergedArray, distinctElements[i]);
            System.out.println(distinctElements[i] + "\t\t\t" + count);
        }
    }

    public static int[] mergeArrays(int[] arr1, int[] arr2) {
        int[] mergedArray = new int[arr1.length + arr2.length];
        int i = 0;

        for (int element : arr1) {
            mergedArray[i++] = element;
        }

        for (int element : arr2) {
            mergedArray[i++] = element;
        }

        return mergedArray;
    }

    public static int[] getDistinctElements(int[] array) {
        Set<Integer> set = new HashSet<>();
        for (int element : array) {
            set.add(element);
        }
        int[] distinctElements = new int[set.size()];
        int i = 0;
        for (int element : set) {
            distinctElements[i++] = element;
        }
        return distinctElements;
    }

    public static int getCount(int[] array, int element) {
        int count = 0;
        for (int i = 0; i < array.length; i++) {
            if (array[i] == element) {
                count++;
            }
        }
        return count;
    }
}
